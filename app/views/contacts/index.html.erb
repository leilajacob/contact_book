<div class="well">

<p id="notice"><%= notice %></p>

<h1>All Contacts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Business</th>
      <th>Address</th>
      <th>Phone1</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.full_name %></td>
        <td><%= contact.business_name %></td>
        <td><%= contact.full_address %></td>
        <td><%= contact.phone1 %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>

</div>
